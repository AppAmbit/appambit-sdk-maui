<Page x:Class="AppAmbit.App.WPF.CrashesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="CrashesPage">

    <Grid Background="#FFFFFF">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40">
                <TextBlock Text="Crashes"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="Black"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30" />

                <Button Content="Did the app crash during your last session?" Click="onDidCrashInLastSession"
                        Height="55" FontSize="16" Margin="0,5" Background="Blue" Foreground="White" />

                <TextBox x:Name="UserIdTextBox"
                         FontSize="16"
                         Height="45"
                         Margin="0,0,0,15"
                         Padding="8"
                         BorderBrush="Gray"
                         BorderThickness="1" />

                <Button Content="Change user id" Click="onChangeUserId"
                        Height="55" FontSize="16" Margin="0,5" Background="Blue" Foreground="White" />

                <TextBox x:Name="UserEmailTextBox"
                         FontSize="16"
                         Height="45"
                         Margin="0,0,0,15"
                         Padding="8"
                         BorderBrush="Gray"
                         BorderThickness="1" />

                <Button Content="Change user email" Click="onChangeUserEmail"
                        Height="55" FontSize="16" Margin="0,5" Background="Blue" Foreground="White" />

                <TextBox x:Name="CustomLogErrorTextBox"
                         FontSize="16"
                         Height="45"
                         Margin="0,0,0,15"
                         Padding="8"
                         BorderBrush="Gray"
                         BorderThickness="1" />

                <Button Content="Send Custom LogError" Click="onSendCustomLogError"
                        Height="55" FontSize="16" Margin="0,5" Background="Blue" Foreground="White" />

                <Button Content="Send Exception LogError" Click="onSendExceptionLogError"
                        Height="55" FontSize="16" Margin="0,5" Background="Blue" Foreground="White" />

                <Button Content="Throw new Crash" Click="onThrowNewCrash"
                        Height="55" FontSize="16" Margin="0,5" Background="Blue" Foreground="White" />

                <Button Content="Generate Test Crash" Click="onGeneratedTestCrash"
                        Height="55" FontSize="16" Margin="0,5" Background="Blue" Foreground="White" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>