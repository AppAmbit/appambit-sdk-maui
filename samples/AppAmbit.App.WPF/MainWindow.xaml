<Window x:Class="AppAmbitTestingAppWindows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppAmbitTestingAppWindows"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" Background="#EEE" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Button Content="Crashes" Width="120" Height="35" Margin="10" Click="ButtonPage1_Click" Background="Blue" Foreground="White"/>
            <Button Content="Analytics" Width="120" Height="35" Margin="10" Click="ButtonPage2_Click" Background="Blue" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>