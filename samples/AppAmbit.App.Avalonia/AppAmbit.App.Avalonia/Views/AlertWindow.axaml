<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AppAmbitTestingAppAvalonia.Views.AlertWindow"
        Width="360" Height="140" CanResize="False" WindowStartupLocation="CenterOwner">
  <Border Padding="12">
    <StackPanel Spacing="10">
      <TextBlock Name="MessageText" TextWrapping="Wrap" />
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
        <Button Name="OkButton" Content="OK" Width="80" Click="OnOkClicked" />
      </StackPanel>
    </StackPanel>
  </Border>
</Window>
