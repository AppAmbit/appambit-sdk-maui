<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AppAmbitTestingAppAvalonia.Views.AlertWindow"
        Width="420" Height="160" WindowStartupLocation="CenterOwner" CanResize="False">
  <StackPanel Margin="12" Spacing="10">
    <TextBlock Name="txtMessage" TextWrapping="Wrap"/>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
      <Button Name="btnOk" Width="80" Content="OK"/>
    </StackPanel>
  </StackPanel>
</Window>
