<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:appAmbitTestingApp="clr-namespace:AppAmbitTestingApp"
             x:Class="AppAmbitTestingApp.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,0"
                             Spacing="25" x:DataType="appAmbitTestingApp:MainPage">
            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a race car number eight" />
            
            <Entry Placeholder="Type log title"
                   Text="{Binding LogTitle }"
                   TextChanged="TitleInputView_OnTextChanged"/>
            
            <Editor Placeholder="Type log message"
                    Text="{Binding LogMessage}"
                    TextChanged="MessageInputView_OnTextChanged"/>
            
            <Button
                Text="Test adding error log" 
                Clicked="OnTestErrorLogClicked" />
            <Button
                Text="Test adding crash log" 
                Clicked="OnTestCrashLogClicked" />
            <Button
                Text="Test adding info log" 
                Clicked="OnTestInfoLogClicked" />
            <Button
                Text="Test adding debug log" 
                Clicked="OnTestDebugLogClicked" />
            <Button
                Text="Test adding warn log" 
                Clicked="OnTestWarnLogClicked" />
            <Button
                Text="Test logging crash" 
                Clicked="OnCounterClicked" />
            <Button
                Text="Generate test crash" 
                Clicked="OnGenerateTestCrash" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
