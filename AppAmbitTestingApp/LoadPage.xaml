<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:appAmbitTestingApp="clr-namespace:AppAmbitTestingApp"
             x:Class="AppAmbitTestingApp.LoadPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,0"
                             Spacing="25" x:DataType="appAmbitTestingApp:LoadPage">

            <Frame BackgroundColor="#F0F0F0"
                   HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Entry 
                        Placeholder="Test Log Message"
                        Text="{Binding Title}"/>
                    <Label
                        x:Name="eventsLabel"
                        Text=""
                        IsVisible="false"/>
                    <Button
                        Text="Send 500 Events"
                        Clicked="OnSend500Events" />
                    <Label
                        x:Name="logsLabel"
                        Text=""
                        IsVisible="False"/>
                    <Button
                        Text="Send 500 Logs"
                        Clicked="OnSend500Logs" />
                    <Label
                        x:Name="startSessionLabel"
                        Text=""
                        IsVisible="false"/>
                    <Button
                        Text="Send 500 Sessions"
                        Clicked="OnSend500Sessions" />
                    <Label
                        x:Name="sessionsLabel"
                        Text=""
                        IsVisible="false"/>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
